---
type Props = {
  name: string;
  shortDescription: string;
  icon?: string;
};

const { name, shortDescription, icon } = Astro.props;
---

<section
  class="relative py-16 md:py-24 overflow-hidden bg-gradient-to-br from-gray-50 to-white"
>
  <!-- 背景の幾何学模様 -->
  <div class="absolute inset-0 opacity-20">
    <div
      class="absolute top-10 left-10 w-32 h-32 border-2 border-gray-300 rotate-12"
    >
    </div>
    <div
      class="absolute top-20 right-20 w-24 h-24 border-2 border-gray-300 -rotate-6"
    >
    </div>
    <div
      class="absolute bottom-20 left-1/4 w-40 h-40 border-2 border-gray-300 rotate-45"
    >
    </div>
    <div
      class="absolute bottom-10 right-1/3 w-28 h-28 border-2 border-gray-300 -rotate-12"
    >
    </div>
  </div>

  <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    {icon && <div class="text-6xl mb-6 fade-in">{icon}</div>}

    <h1
      class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 fade-in"
      style="animation-delay: 0.1s;"
    >
      {name}
    </h1>

    <p
      class="text-lg md:text-xl text-gray-700 max-w-2xl mx-auto fade-in"
      style="animation-delay: 0.2s;"
    >
      {shortDescription}
    </p>
  </div>
</section>
